# Dockerfile for React frontend
FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package.json package-lock.json* ./

# Install dependencies
RUN npm install

# Copy shared code
COPY shared/ ./shared/

# Copy UI code
COPY src/demo-ui/ ./src/

WORKDIR /app/src

# Expose port
EXPOSE 3000

# Development server
CMD ["npm", "run", "dev"]
