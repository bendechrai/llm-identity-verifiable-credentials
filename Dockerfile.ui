# Dockerfile for Demo UI frontend
FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package.json package-lock.json* ./

# Install dependencies
RUN npm install

# Copy TypeScript config
COPY tsconfig.json ./

# Copy shared code
COPY shared/ ./shared/

# Copy UI code
COPY src/demo-ui/ ./src/demo-ui/

# Copy shared library
COPY src/lib/ ./src/lib/

WORKDIR /app/src/demo-ui

# Expose port
EXPOSE 3000

# Use tsx to run the TypeScript server
CMD ["npx", "tsx", "index.ts"]
