{
  "name": "llm-identity-demo",
  "version": "0.0.1",
  "description": "Demo: Building Identity into LLM Workflows with Verifiable Credentials",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "docker-compose up",
    "dev:build": "docker-compose up --build",
    "dev:mock": "LLM_MODE=mock docker-compose up",
    "dev:ollama": "LLM_MODE=ollama docker-compose up",
    "dev:openai": "LLM_MODE=openai docker-compose up",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "clean": "docker-compose down -v && rm -rf node_modules dist coverage"
  },
  "workspaces": [
    "src/*"
  ],
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "@digitalbazaar/credentials-context": "^2.0.0",
    "@digitalbazaar/data-integrity": "^2.0.0",
    "@digitalbazaar/data-integrity-context": "^2.0.0",
    "@digitalbazaar/ed25519-signature-2020": "^5.2.0",
    "@digitalbazaar/ed25519-verification-key-2020": "^4.1.0",
    "@digitalbazaar/vc": "^6.0.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "uuid": "^9.0.0",
    "zod": "^3.22.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
