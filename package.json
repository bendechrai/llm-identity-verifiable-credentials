{
  "name": "llm-identity-demo",
  "version": "0.0.1",
  "description": "Demo: Building Identity into LLM Workflows with Verifiable Credentials",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "docker-compose up",
    "dev:build": "docker-compose up --build",
    "dev:mock": "LLM_MODE=mock docker-compose up",
    "dev:ollama": "LLM_MODE=ollama docker-compose up",
    "dev:openai": "LLM_MODE=openai docker-compose up",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "dev:validate-docker": "tsx scripts/validate-docker.ts",
    "dev:smoke": "bash scripts/smoke-test.sh",
    "clean": "docker-compose down -v && rm -rf node_modules dist coverage"
  },
  "workspaces": [
    "src/*"
  ],
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.1.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "yaml": "^2.8.2"
  },
  "dependencies": {
    "@digitalbazaar/credentials-context": "^3.2.0",
    "@digitalbazaar/data-integrity": "^2.5.0",
    "@digitalbazaar/data-integrity-context": "^2.0.1",
    "@digitalbazaar/ed25519-multikey": "^1.3.1",
    "@digitalbazaar/eddsa-rdfc-2022-cryptosuite": "^1.2.0",
    "@digitalbazaar/vc": "^7.2.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "jsonld": "^8.3.0",
    "jsonld-signatures": "^11.5.0",
    "uuid": "^9.0.0",
    "zod": "^3.22.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
